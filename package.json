{
  "name": "graphql-app",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run lint && babel --optional runtime src --out-dir build",
    "lint": "eslint --ext .js --ext .jsx src",
    "start": "babel-node --harmony src/index.js",
    "prod": "set NODE_ENV=production && node build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --watch src --ext js,jsx --exec npm run start",
    "install": "node scripts/install.js"
  },
  "author": "",
  "license": "ISC",
  "eslintConfig": {
    "rules": {
      "comma-dangle": [
        2,
        "never"
      ],
      "no-cond-assign": 2,
      "no-console": 0,
      "no-constant-condition": 2,
      "no-control-regex": 2,
      "no-debugger": 2,
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-empty": 2,
      "no-empty-character-class": 2,
      "no-ex-assign": 2,
      "no-extra-boolean-cast": 2,
      "no-extra-parens": 2,
      "no-extra-semi": 2,
      "no-func-assign": 2,
      "no-inner-declarations": 2,
      "no-invalid-regexp": 2,
      "no-irregular-whitespace": 2,
      "no-negated-in-lhs": 2,
      "no-obj-calls": 2,
      "no-sparse-arrays": 2,
      "no-unreachable": 2,
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        2,
        "always"
      ],
      "use-isnan": 2,
      "valid-typeof": 2,
      "vars-on-top": 2
    },
    "ecmaFeatures": {
      "blockBindings": true,
      "forOf": true,
      "jsx": true,
      "modules": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    }
  },
  "dependencies": {
    "babel": "^5.8.23",
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "console-polyfill": "^0.2.2",
    "es5-shim": "^4.1.13",
    "graphql": "^0.4.4",
    "history": "^1.11.0",
    "koa": "^1.0.0",
    "koa-etag": "^2.0.0",
    "koa-graphql": "^0.2.0",
    "koa-gzip": "^0.1.0",
    "koa-router": "^5.1.2",
    "koa-static": "^1.4.9",
    "node-sass-middleware": "^0.9.6",
    "react": "^0.14.0-rc1",
    "react-router": "^1.0.0-rc1",
    "uglifyify": "^3.0.1",
    "waterline": "^0.10.26"
  },
  "devDependencies": {
    "babel-runtime": "^5.8.25",
    "eslint": "^1.5.1",
    "forever": "^0.15.1",
    "nodemon": "^1.7.0",
    "reactify": "^1.1.1"
  }
}
